<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="controllers.appointment.NewAppointmentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            style="@style/Heading"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/tvCustomerName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            style="@style/Sub_Heading"/>

        <TextView
            android:id="@+id/tvManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@id/tvAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            style="@style/paragraph"/>

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@id/tvManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            style="@style/paragraph"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            style="@style/paragraph"
            app:layout_constraintTop_toBottomOf="@id/tvPhone"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:layout_marginStart="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JAN 01 2023"
            android:textColor="@color/app_black"
            style="?spinnerStyle"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:background="@drawable/search_bg"
            />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            style="@style/paragraph"
            app:layout_constraintTop_toBottomOf="@id/tvPhone"
            app:layout_constraintStart_toEndOf="@id/tvDate"
            android:layout_marginStart="50dp"/>

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:30 PM"
            style="?spinnerStyle"
            android:textColor="@color/app_black"
            android:background="@drawable/search_bg"
            app:layout_constraintTop_toBottomOf="@id/tvStartTime"
            app:layout_constraintStart_toEndOf="@id/btnDatePicker"
            android:layout_marginStart="40dp"/>
        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            style="@style/paragraph"
            app:layout_constraintTop_toBottomOf="@id/btnStartTime"
            app:layout_constraintStart_toStartOf="@id/btnStartTime"
            app:layout_constraintEnd_toEndOf="@id/btnStartTime"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:30 PM"
            style="?spinnerStyle"
            android:textColor="@color/app_black"
            android:background="@drawable/search_bg"
            app:layout_constraintTop_toBottomOf="@id/tvEndTime"
            app:layout_constraintStart_toStartOf="@id/tvEndTime"
            app:layout_constraintEnd_toEndOf="@id/tvEndTime"/>
        <View
            android:id="@+id/vDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_black"
            app:layout_constraintTop_toBottomOf="@id/btnEndTime"/>
        <TextView
            android:id="@+id/tvSelectedStaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Staffs"
            style="@style/paragraph"
            app:layout_constraintTop_toBottomOf="@id/vDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ddSelectStaff"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="Truc Dang Quynh"
            style="?spinnerStyle"
            app:layout_constraintTop_toBottomOf="@id/tvSelectedStaff"
            app:layout_constraintStart_toStartOf="@id/tvSelectedStaff"
            app:layout_constraintEnd_toEndOf="@id/tvSelectedStaff"
            android:background="@drawable/search_bg"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddAppointment"
            android:layout_width="35dp"
            android:layout_height="17dp"
            android:text="Add"
            android:textSize="7sp"
            android:background="@drawable/button_bg_yellow"
            app:layout_constraintTop_toBottomOf="@id/ddSelectStaff"
            app:layout_constraintStart_toStartOf="@id/tvSelectedStaff"
            android:layout_marginTop="20dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRemoveAppointment"
            android:layout_width="35dp"
            android:layout_height="17dp"
            android:text="remove"
            android:textSize="7sp"
            android:background="@drawable/button_bg_red"
            app:layout_constraintTop_toBottomOf="@id/ddSelectStaff"
            app:layout_constraintStart_toEndOf="@id/btnAddAppointment"
            app:layout_constraintEnd_toEndOf="@id/ddSelectStaff"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"/>
        <ListView
            android:id="@+id/lvStaffList"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvSelectedStaff"
            app:layout_constraintTop_toBottomOf="@id/vDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="100dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>