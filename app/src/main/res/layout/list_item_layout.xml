<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/information_capsule">
        <TextView
            android:id="@+id/txtCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/app_red"
            android:fontFamily="@font/fredoka_one"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtManagerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manager Name"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_weight="0.5"
                android:fontFamily="@font/fredoka_one"/>
            <TextView
                android:id="@+id/txtAppointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Appointment"
                android:textSize="12sp"
                android:layout_weight="1"
                android:fontFamily="@font/fredoka_one"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtAddress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Address Line 1"
            android:fontFamily="@font/fredoka_one"/>
        <TextView
            android:id="@+id/txtAddress2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Address Line 2"
            android:fontFamily="@font/fredoka_one"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>