<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="controllers.staff.ModifyStaffFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/formStaffModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/information_capsule"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/staffImageForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/imPhotoModifyStaff"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/no_one"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUpload"
                    android:gravity="center"
                    android:layout_width="73dp"
                    android:layout_height="30dp"
                    android:text="Upload"
                    android:textColor="@color/app_black"
                    android:fontFamily="@font/fredoka_one"
                    android:background="@drawable/button_bg_yellow"
                    android:layout_marginVertical="10dp"
                    android:textSize="14sp"
                    android:textAllCaps="false"

                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRemove"
                    android:gravity="center"
                    android:layout_width="73dp"
                    android:layout_height="30dp"
                    android:text="Remove"
                    android:textColor="@color/white"
                    android:fontFamily="@font/fredoka_one"
                    android:background="@drawable/button_bg_red"
                    android:layout_marginVertical="10dp"
                    android:textSize="14sp"
                    android:textAllCaps="false"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/formCardModify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp">

                <TextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name:"
                    android:textSize="15sp"
                    android:textFontWeight="700"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fredoka_one"
                    />

                <EditText
                    android:id="@+id/edFirstNameModifyStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/search_bg"
                    android:paddingStart="10dp"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:fontFamily="@font/fredoka_medium"

                    />
                <TextView
                    android:id="@+id/tvLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name:"
                    android:textSize="15sp"
                    android:textFontWeight="700"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fredoka_one"/>
                <EditText
                    android:id="@+id/edLastNameModifyStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/search_bg"
                    android:paddingStart="10dp"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:fontFamily="@font/fredoka_medium"

                    />
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:textFontWeight="700"
                    android:fontFamily="@font/fredoka_one"/>
                <EditText
                    android:id="@+id/edEmailModifyStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/search_bg"
                    android:paddingStart="10dp"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:fontFamily="@font/fredoka_medium"
                    />
                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone:"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:textFontWeight="700"
                    android:fontFamily="@font/fredoka_one"/>
                <EditText
                    android:id="@+id/edPhoneModifyStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/search_bg"
                    android:paddingStart="10dp"

                    android:maxLines="1"
                    android:maxLength="11"
                    android:fontFamily="@font/fredoka_medium"
                    />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/formStaffModify"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpdate"
                android:gravity="center"
                android:layout_width="79dp"
                android:layout_height="36dp"
                android:text="Update"
                android:textColor="@color/app_black"
                android:fontFamily="@font/fredoka_one"
                android:background="@drawable/button_bg_yellow"
                android:layout_marginVertical="10dp"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginEnd="40dp"

                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDelete"
                android:gravity="center"
                android:layout_width="79dp"
                android:layout_height="36dp"
                android:text="Delete"
                android:textColor="@color/white"
                android:fontFamily="@font/fredoka_one"
                android:background="@drawable/button_bg_red"
                android:layout_marginVertical="10dp"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginStart="40dp"

                />
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>