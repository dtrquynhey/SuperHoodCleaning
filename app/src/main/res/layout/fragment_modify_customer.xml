<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="controllers.customer.ModifyCustomerFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/formCardModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            android:background="@drawable/information_capsule"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/nameModifyCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="15sp"
                android:textFontWeight="700"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/fredoka_one"/>
            <EditText
                android:id="@+id/edNameModifyCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/search_bg"
                android:fontFamily="@font/fredoka_medium"
                android:paddingStart="10dp"
                android:text="Chipotle"


                />
            <TextView
                android:id="@+id/managerModifyCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manager"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textFontWeight="700"
                android:fontFamily="@font/fredoka_one"/>
            <EditText
                android:id="@+id/edManagerModifyCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/search_bg"
                android:fontFamily="@font/fredoka_medium"
                android:paddingStart="10dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/streetModifyCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Street"
                    android:textSize="15sp"
                    android:textFontWeight="700"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/fredoka_one"/>
                <TextView
                    android:id="@+id/stateModifyCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="15sp"
                    android:textFontWeight="700"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/fredoka_one"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edStreetModifyCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/search_bg"
                    android:paddingVertical="2dp"
                    android:fontFamily="@font/fredoka_medium"
                    android:paddingStart="10dp"

                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edStateModifyCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/search_bg"
                    android:fontFamily="@font/fredoka_medium"
                    >
                    <Spinner
                        android:id="@+id/spinnerStateNewCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/usa_states_array"
                        android:fontFamily="@font/fredoka_medium"


                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cityModifyCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textSize="15sp"
                    android:textFontWeight="700"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/fredoka_one"/>
                <TextView
                    android:id="@+id/zipModifyCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zip"
                    android:textSize="15sp"
                    android:textFontWeight="700"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/fredoka_one"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edCityModifyCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/search_bg"
                    android:fontFamily="@font/fredoka_medium"
                    android:paddingStart="10dp"


                    />
                <EditText
                    android:id="@+id/edZipModifyCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/search_bg"
                    android:fontFamily="@font/fredoka_medium"
                    android:paddingStart="10dp"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/phoneModifyCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="15sp"
                android:textFontWeight="700"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/fredoka_one"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edPhoneModifyCustomer"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/search_bg"
                    android:fontFamily="@font/fredoka_medium"
                    android:paddingStart="10dp"

                    />
                <Button
                    android:id="@+id/viewAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?android:borderlessButtonStyle"
                    android:text="View Appointment"
                    android:textSize="10sp"
                    android:fontFamily="@font/fredoka_one"
                    android:textColor="@color/app_black"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/formCardModify"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpdate"
                android:gravity="center"
                android:layout_width="79dp"
                android:layout_height="36dp"
                android:text="Update"
                android:textColor="@color/app_black"
                android:fontFamily="@font/fredoka_one"
                android:background="@drawable/button_bg_yellow"
                android:layout_marginVertical="10dp"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginEnd="40dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDelete"
                android:gravity="center"
                android:layout_width="79dp"
                android:layout_height="36dp"
                android:text="Delete"
                android:textColor="@color/white"
                android:fontFamily="@font/fredoka_one"
                android:background="@drawable/button_bg_red"
                android:layout_marginVertical="10dp"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginStart="40dp"

                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

