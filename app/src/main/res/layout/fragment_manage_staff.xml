<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="controllers.staff.ManageStaffFragment"
    android:background="#1E1E1E">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#141313"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Staff Management"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FBE056"

            />
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_marginTop="20dp"
            android:iconifiedByDefault="false"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            android:queryHint="search"
            android:background="@drawable/back1"
            />

        <TextView
            android:id="@+id/tvMyStaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Staff"
            app:layout_constraintTop_toBottomOf="@id/searchView"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textColor="#FBE056"
            android:textStyle="bold"
            />
        <View
            android:id="@+id/vLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#FBE056"
            app:layout_constraintTop_toBottomOf="@id/tvMyStaff"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="@id/searchView"
            />

        <View
            android:id="@+id/view2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/vLine"
            android:background="@drawable/staff_container"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"

            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/no_one"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintRight_toRightOf="@+id/view2"
            app:layout_constraintLeft_toLeftOf="@+id/view2"
            />

        <TextView
            android:id="@+id/tvName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name1"
            app:layout_constraintBottom_toBottomOf="@id/view2"
            app:layout_constraintRight_toRightOf="@id/view2"
            app:layout_constraintLeft_toLeftOf="@id/view2"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:textColor="@color/app_red"
            />

        <View
            android:id="@+id/view3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/vLine"
            android:background="@drawable/staff_container"
            app:layout_constraintLeft_toRightOf="@+id/view2"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/no_one"
            app:layout_constraintTop_toTopOf="@+id/view3"
            app:layout_constraintRight_toRightOf="@+id/view3"
            app:layout_constraintLeft_toLeftOf="@+id/view3"
            />

        <TextView
            android:id="@+id/tvName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name2"
            app:layout_constraintBottom_toBottomOf="@id/view3"
            app:layout_constraintRight_toRightOf="@id/view3"
            app:layout_constraintLeft_toLeftOf="@id/view3"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:textColor="@color/app_red"

            />

        <View
            android:id="@+id/view4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@id/view2"
            android:layout_marginTop="40dp"
            android:background="@drawable/staff_container"

            />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/no_one"
            app:layout_constraintTop_toTopOf="@+id/view4"
            app:layout_constraintRight_toRightOf="@+id/view4"
            app:layout_constraintLeft_toLeftOf="@+id/view4"

            />

        <TextView
            android:id="@+id/tvName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name3"
            app:layout_constraintBottom_toBottomOf="@id/view4"
            app:layout_constraintRight_toRightOf="@id/view4"
            app:layout_constraintLeft_toLeftOf="@id/view4"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:textColor="@color/app_red"
            />

        <View
            android:id="@+id/view5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            app:layout_constraintStart_toStartOf="@id/view3"
            android:layout_marginTop="40dp"
            android:background="@drawable/staff_container"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/no_one"
            app:layout_constraintTop_toTopOf="@+id/view5"
            app:layout_constraintRight_toRightOf="@+id/view5"
            app:layout_constraintLeft_toLeftOf="@+id/view5"
            />

        <TextView
            android:id="@+id/tvName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name4"
            app:layout_constraintBottom_toBottomOf="@id/view5"
            app:layout_constraintRight_toRightOf="@id/view5"
            app:layout_constraintLeft_toLeftOf="@id/view5"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:textColor="@color/app_red"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>